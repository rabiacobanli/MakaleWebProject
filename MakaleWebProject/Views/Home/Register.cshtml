@using (Html.BeginForm())
{

    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Formu</h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.KullaniciTakmaAdi, new { @class = "form-control", placeholder = "Kullanıcı Adınız" })
                        @*<input id="email" type="text" class="form-control" name="email" placeholder="Kullanıcı Adı">*@
                    </div>


                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email adresiniz" })          
                    </div>


                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Sifre, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                        @*<input id="password" type="password" class="form-control" name="password" placeholder="Şifre">*@
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Sifre2, new { @class = "form-control", placeholder = "Şifreniz(Tekrar)", type = "password" })
                    </div>


                    @*<div class="checkbox">
            <label class="remember">
                <input name="remember" type="checkbox"> Remember Me
            </label>
        </div>*@

                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Giriş</button>
                        @*<a href="#" type="button" class="btn btn-danger btn-lg btn-block login-button">Giriş</a>*@
                    </div>
                </div>
            </div>
        </div>
    </section>
    }




